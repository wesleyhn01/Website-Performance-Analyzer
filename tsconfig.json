{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }